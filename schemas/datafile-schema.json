{
	"$id": "http://ihsn.org/schemas/datafile",
  	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"definitions": {},	
	"properties": {
		"file_id": {
			"type": "string",
			"title": "File unique ID"
		},
		"file_name": {
			"type": "string",
			"title" : "File name"
		},
		"file_type": {
			"type": "string",
			"title" : "File type",
			"description": "Types of data files include raw data (ASCII, EBCDIC, etc.) and software-dependent files such as SAS datasets, SPSS export files, etc."
		},
		"description": {
			"type": "string",
			"title": "File description"
		},
		"case_count": {
			"type": "integer",
			"title": "Cases count"
		},
		"var_count": {
			"type": "integer",
			"title": "Variable count"
		},
		"producer": {
			"type": "string",
			"description": "File producer"
		},		
		"data_checks": {
			"type": "string",
			"title": "Processing checks"
		},
		"missing_data": {
			"type": "string",
			"title": "Missing data"
		},
		"version": {
			"type": "string",
            "title": "Version"		
        },		
		"notes": {
			"type": "string",
			"title": "File notes"
		}
	},
	"required": [ "file_id", "file_name"]
}